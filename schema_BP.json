{
   "$schema":"http://json-schema.org/draft-04/schema#",
   "oneOf":[
      {
         "type":"object",
         "description":"the JSON schema for the computational nodes",
         "properties":{
            "Geo_Location":{
               "type":"object",
               "properties":{
                  "latitude":{
                     "type":"number"
                  },
                  "longitude":{
                     "type":"number"
                  }
               },
               "required":[
                  "latitude",
                  "longitude"
               ],
               "additionalProperties":false
            },
            "Network_Locality":{
               "enum":[
                  "external",
                  "internal",
                  "local"
               ]
            },
            "Virtual_Entity":{
               "type":"string"
            },
            "Resource_Identifier":{
               "type":"string"
            },
            "Type":{
               "enum":[
                  "computational"
               ]
            },
            "Details":{
               "type":"object",
               "properties":{
                  "Instance_Type":{
                     "type":"string"
                  }
               },
               "required":[
                  "Instance_Type"
               ],
               "additionalProperties":false
            },
            "Operational_Period":{
               "type":"object",
               "properties":{
                  "from":{
                     "type":"string"
                  },
                  "until":{
                     "type":"string"
                  }
               },
               "required":[
                  "from",
                  "until"
               ],
               "additionalProperties":false
            }
         },
         "required":[
            "Geo_Location",
            "Network_Locality",
            "Virtual_Entity",
            "Resource_Identifier",
            "Type",
            "Details",
            "Operational_Period"
         ],
         "additionalProperties":false
      },
      {
         "type":"object",
         "description":"the JSON schema for the datastore nodes",
         "properties":{
            "Geo_Location":{
               "type":"object",
               "properties":{
                  "latitude":{
                     "type":"number"
                  },
                  "longitude":{
                     "type":"number"
                  }
               },
               "required":[
                  "latitude",
                  "longitude"
               ],
               "additionalProperties":false
            },
            "Network_Locality":{
               "enum":[
                  "external",
                  "internal",
                  "local"
               ]
            },
            "Virtual_Entity":{
               "type":"string"
            },
            "Resource_Identifier":{
               "type":"string"
            },
            "Type":{
               "enum":[
                  "datastore"
               ]
            },
            "Details":{
               "type":"object",
               "properties":{
                  "Database_Type":{
                     "type":"string"
                  },
                  "Data_Collection":{
                     "type":"string"
                  }
               },
               "required":[
                  "Database_Type",
                  "Data_Collection"
               ],
               "additionalProperties":false
            },
            "Operational_Period":{
               "type":"object",
               "properties":{
                  "from":{
                     "type":"string"
                  },
                  "until":{
                     "type":"string"
                  }
               },
               "required":[
                  "from",
                  "until"
               ],
               "additionalProperties":false
            }
         },
         "required":[
            "Geo_Location",
            "Network_Locality",
            "Virtual_Entity",
            "Resource_Identifier",
            "Type",
            "Details",
            "Operational_Period"
         ],
         "additionalProperties":false
      }
   ]
}